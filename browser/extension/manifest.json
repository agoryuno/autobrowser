{
    "manifest_version": 2,
    "name": "Tab Manager",
    "version": "1.3.98",
    "description": "An extension to list open tabs and close a tab by URL.",
    "permissions": [
        "tabs",
        "activeTab",
        "<all_urls>"
    ],
    
    "background": {
      "scripts": ["background.js"]
    },
    "content_security_policy": "script-src 'self' https://127.0.0.1:1837; object-src 'self';",
    "browser_action": {
        "default_title": "Tab Manager"
    },
    "content_scripts": [
        {
          "matches": ["<all_urls>"],
          "js": ["content.js"]
        }
      ],
    "browser_specific_settings": {
        "gecko": {
          "id": "tab_manager@apg"
        }
      },
    "page": "background.html"
}
