#!/bin/bash

# script: install-extension

root_path=${1:-$(pwd)}

# Install the tab_manager@apg extension
./bin/make-extension -v
echo "Copying extension to ${root_path}/bin/firefox/distribution/extensions/tab_manager@apg.xpi"
mkdir --parents "${root_path}/bin/firefox/distribution/extensions"
cp "${root_path}/browser/extension.xpi" "${root_path}/bin/firefox/distribution/extensions/tab_manager@apg.xpi"
cp "${root_path}/browser/extension.xpi" "${root_path}/bin/firefox/profiles/default/extensions/tab_manager@apg.xpi"

